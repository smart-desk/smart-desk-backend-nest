{
    "name": "smart-desk-backend-nest",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "premigrations": "npm run build",
        "migrations": "npm run typeorm migration:run",
        "pretty-quick": "pretty-quick"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/jwt": "^7.1.0",
        "@nestjs/mapped-types": "^0.1.0",
        "@nestjs/passport": "^7.1.0",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/platform-socket.io": "^7.6.15",
        "@nestjs/swagger": "^4.8.0",
        "@nestjs/typeorm": "^7.1.4",
        "@nestjs/websockets": "^7.6.15",
        "aws-sdk": "^2.799.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "dayjs": "^1.10.4",
        "dotenv": "^8.2.0",
        "google-auth-library": "^6.1.1",
        "lodash": "^4.17.21",
        "multer": "^1.4.2",
        "nest-access-control": "^2.0.2",
        "nexmo": "^2.9.1",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "pg": "^8.4.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "swagger-ui-express": "^4.1.4",
        "typeorm": "^0.2.32",
        "uuid": "^8.3.1",
        "vk-io": "^4.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/aws-sdk": "^2.7.0",
        "@types/express": "^4.17.3",
        "@types/jest": "26.0.10",
        "@types/lodash": "^4.14.168",
        "@types/multer": "^1.4.4",
        "@types/node": "^13.9.1",
        "@types/passport-google-oauth20": "^2.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/socket.io": "^2.1.13",
        "@types/socket.io-client": "^1.4.36",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "husky": "^4.3.0",
        "jest": "26.4.2",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "socket.io-client": "2.3.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
